{
  "name": "calen",
  "private": true,
  "workspaces": [
    "web",
    "api"
  ],
  "scripts": {
    "dev": "concurrently -k -n WEB,API -c blue,green \"npm run dev --workspace calen-web\" \"npm run start --workspace calen-api\"",
    "web:deploy": "npm run deploy --workspace calen-web",
    "api:deploy": "npm run deploy --workspace calen-api",
    "format:check": "prettier --check .",
    "format:write": "prettier --write ."
  },
  "devDependencies": {
    "concurrently": "^8.2.0",
    "prettier": "3.5.3",
    "prettier-plugin-svelte": "^3.4.0"
  }
}
