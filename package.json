{
  "name": "thirty",
  "private": true,
  "version": "0.0.1",
  "type": "module",
  "scripts": {
    "dev": "vite dev",
    "tunnel": "pnpm dlx localtunnel --port 5173",
    "tunnel:dev": "pnpm dlx localtunnel --port 5173 --subdomain thirty-calendar-dev || true",
    "deploy": "vercel --force",
    "prod": "vercel --force --prod",
    "build": "vite build",
    "prepare": "husky",
    "preview": "vite preview",
    "check": "svelte-kit sync && NODE_OPTIONS=--max-old-space-size=4096 svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "lint:check": "eslint",
    "lint:write": "eslint --fix",
    "format:check": "prettier --check .",
    "format:write": "prettier --write .",
    "auth:generate": "pnpm dlx @better-auth/cli generate --config ./libs/auth/index.ts --output ./libs/db/schemas/auth-table.ts --y",
    "db:reset": "pnpm dlx tsx ./src/lib/server/utils/scripts/reset-db.ts --url $DATABASE_URL",
    "db:push": "cross-env NODE_ENV=development drizzle-kit push",
    "db:generate": "cross-env NODE_ENV=development drizzle-kit generate",
    "db:migrate": "cross-env NODE_ENV=development drizzle-kit migrate",
    "db:studio": "cross-env NODE_ENV=development drizzle-kit studio",
    "db:generate:prod": "cross-env NODE_ENV=production drizzle-kit generate",
    "db:migrate:prod": "cross-env NODE_ENV=production drizzle-kit migrate",
    "db:studio:prod": "cross-env NODE_ENV=production drizzle-kit studio"
  },
  "devDependencies": {
    "@commitlint/config-conventional": "^19.8.1",
    "@eslint/compat": "^1.3.2",
    "@eslint/js": "^9.33.0",
    "@ianvs/prettier-plugin-sort-imports": "^4.6.1",
    "@sveltejs/adapter-auto": "^6.1.0",
    "@sveltejs/kit": "^2.28.0",
    "@sveltejs/vite-plugin-svelte": "^6.1.1",
    "@types/pg": "^8.15.5",
    "commitlint": "^19.8.1",
    "cross-env": "^10.0.0",
    "drizzle-kit": "^0.31.4",
    "eslint": "^9.33.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-svelte": "^3.11.0",
    "eslint-plugin-unicorn": "^60.0.0",
    "globals": "^16.3.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.5",
    "prettier": "^3.6.2",
    "prettier-plugin-svelte": "^3.4.0",
    "prettier-plugin-tailwindcss": "^0.6.14",
    "svelte": "^5.38.1",
    "svelte-check": "^4.3.1",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.39.1",
    "vite": "^7.1.2"
  },
  "dependencies": {
    "@ai-sdk/openai": "^2.0.10",
    "@googleapis/calendar": "^11.0.1",
    "@hono/zod-validator": "^0.7.2",
    "@neondatabase/serverless": "^1.0.1",
    "@openrouter/ai-sdk-provider": "^1.1.2",
    "@polar-sh/better-auth": "^1.1.0",
    "@polar-sh/sdk": "^0.34.10",
    "@tailwindcss/vite": "^4.1.11",
    "@upstash/redis": "^1.35.3",
    "@upstash/vector": "^1.2.2",
    "@vvo/tzdb": "^6.183.0",
    "ai": "^5.0.10",
    "better-auth": "^1.3.5",
    "clsx": "^2.1.1",
    "daisyui": "^5.0.50",
    "date-fns": "^4.1.0",
    "date-fns-tz": "^3.2.0",
    "dotenv": "^17.2.1",
    "drizzle-orm": "^0.44.4",
    "googleapis": "^155.0.1",
    "hono": "^4.9.0",
    "openai": "^5.12.2",
    "pg": "^8.16.3",
    "tailwind-merge": "^3.3.1",
    "tailwindcss": "^4.1.11",
    "voyage-ai-provider": "^2.0.0",
    "zod": "^4.0.17"
  },
  "pnpm": {
    "peerDependencyRules": {
      "allowAny": [
        "zod"
      ],
      "ignoreMissing": [
        "zod"
      ]
    }
  },
  "lint-staged": {
    "*": "node ./pre-commit.js"
  }
}
