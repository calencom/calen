{
  "name": "calen",
  "private": true,
  "workspaces": [
    "web",
    "api"
  ],
  "scripts": {
    "dev": "concurrently -k -n WEB,API -c blue,green \"npm run dev --workspace calen-web\" \"npm run start --workspace calen-api\"",
    "web:deploy": "npm run deploy --workspace calen-web",
    "api:deploy": "npm run deploy --workspace calen-api",
    "lint:check": "npx @biomejs/biome lint .",
    "lint:write": "npx @biomejs/biome lint --write .",
    "format:check": "prettier --check .",
    "format:write": "prettier --write ."
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@ianvs/prettier-plugin-sort-imports": "^4.4.1",
    "concurrently": "^8.2.0",
    "prettier": "3.5.3",
    "prettier-plugin-svelte": "^3.4.0"
  }
}
