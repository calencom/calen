{
  "useTabs": false,
  "singleQuote": false,
  "trailingComma": "none",
  "printWidth": 100,
  "plugins": ["prettier-plugin-svelte", "@ianvs/prettier-plugin-sort-imports"],
  "importOrder": [
    "^svelte",
    "^@sveltejs",
    "^\\$app",
    "^\\$env",

    "",

    "^@[^/]+/",

    "",

    "<THIRD_PARTY_MODULES>",

    "",

    "^\\$lib/ui/features",
    "^\\$lib/ui/components",
    "^\\$lib/ui/stores",
    "^\\$lib/ui/contexts",
    "^\\$lib/ui/actions",
    "^\\$lib/ui/utils",
    "^\\$lib/ui/assets",
    "^\\$lib/ui",

    "",

    "^\\$lib/server/api",
    "^\\$lib/server/services",
    "^\\$lib/server/auth",
    "^\\$lib/server/db",
    "^\\$lib/server/email",
    "^\\$lib/server",

    "",

    "^\\$lib/types",
    "^\\$lib/utils",
    "^\\$lib",

    "",

    "^\\.\\./\\.\\./\\.\\./",
    "^\\.\\./\\.\\./",
    "^\\.\\./",
    "^\\./"
  ],
  "importOrderParserPlugins": ["typescript", "svelte", "decorators-legacy"],
  "overrides": [
    {
      "files": "*.svelte",
      "options": {
        "parser": "svelte"
      }
    }
  ]
}
