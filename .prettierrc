{
  "useTabs": false,
  "singleQuote": false,
  "trailingComma": "none",
  "printWidth": 100,
  "plugins": ["prettier-plugin-svelte", "@ianvs/prettier-plugin-sort-imports"],
  "importOrder": [
    "^(svelte|@sveltejs)/",
    "^\\$app/",

    "",

    "^@lucide/",
    "^@zod/",
    "^hono",
    "^drizzle-orm",
    "^@better-auth/",
    "^@polar-sh/",
    "^@resend/",
    "<THIRD_PARTY_MODULES>",

    "",

    "^\\$lib/features/",
    "^\\$lib/components/",
    "^\\$lib/server/",
    "^\\$lib/stores/",
    "^\\$lib/contexts/",
    "^\\$lib/actions/",
    "^\\$lib/assets/",
    "^\\$lib/utils/",
    "^\\$lib/",

    "",

    "^\\.\\./\\.\\./\\.\\./",
    "^\\.\\./\\.\\./",
    "^\\.\\./",
    "^\\./"
  ],
  "importOrderParserPlugins": ["typescript", "svelte", "decorators-legacy"],
  "overrides": [
    {
      "files": "*.svelte",
      "options": {
        "parser": "svelte"
      }
    }
  ]
}
